<Window x:Class="Pract_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Последние документы" Grid.Row="0" Grid.Column="0" Margin="5,5,15,10"/>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <Button Content="Открыть" Margin="0,0,5,0" />
            <Button Content="Сохранить" Margin="0,0,5,0" />
            <Button Content="Закрыть" Margin="0,0,5,0" />
            <Button Content="Обработать" Margin="0,0,5,0" />
            <Button Content="О программе" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" >
            <TextBlock Text="1.txt" Margin="0,0,0,10" />
            <TextBlock Text="2.txt" Margin="0,0,0,10" />
            <TextBlock Text="3.txt" Margin="0,0,0,10" />
            <TextBlock Text="4.txt" Margin="0,0,0,10" />
            <TextBlock Text="5.txt" Margin="0,0,0,10" />
            <TextBlock Text="6.txt" Margin="0,0,0,10" />
        </StackPanel>

        <DockPanel Grid.Row="1" Grid.Column="1">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,10,0,10" >
                <TextBlock Text="1.txt" FontWeight="Bold" Margin="0,0,10,0" />
                <TextBlock Text="2.txt" Margin="0,0,10,0" />
                <TextBlock Text="3.txt" />
            </StackPanel>

            <WrapPanel Orientation="Horizontal" Margin="5,0,0,0">
                <Button Background="Yellow" Content="A" Height="90" Width="70" Margin="0,0,15,15"/>
                <Button Background="Red" Content="B" Height="90" Width="70" Margin="0,0,15,15"/>
                <Button Background="Green" Content="C" Height="90" Width="70" Margin="0,0,15,15"/>
                <Button Background="Blue" Content="D" Height="90" Width="70" Margin="0,0,15,15"/>
                <Button Background="Gray" Content="E" Height="90" Width="70" Margin="0,0,15,15"/>
                <Button Background="LightGoldenrodYellow" Content="F" Height="90" Width="70" Margin="0,0,15,15"/>
            </WrapPanel>
        </DockPanel>
    </Grid>
</Window>
