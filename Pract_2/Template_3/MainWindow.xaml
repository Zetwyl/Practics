<Window x:Class="Pract_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="900" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Левая колонка -->
        <Button Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"  Content="Кнопка 1" />
        <Button Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Content="Кнопка 2" />

        <!-- Центральная высокая -->
        <Button Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" Content="Кнопка 3" />

        <!-- Правая верхняя широкая -->
        <Button Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="3" Content="Кнопка 4" />

        <!-- -->
        <Button Grid.Column="2" Grid.Row="1" Content="Кнопка 5" />
        <Button Grid.Column="3" Grid.Row="1" Content="Кнопка 6" />
        <Button Grid.Column="4" Grid.Row="1" Content="Кнопка 7" />

        <!-- Правая нижняя широкая -->
        <Button Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="3" Content="Кнопка 8" />
 
    </Grid>
</Window>



